create policy "Einfügezugriff für Getränke"
on "public"."getränke"
to authenticated
using (
    true
) with check (
  (user_id = auth.uid())
);

create policy "Lesezugriff für Getränke"
on "public"."getränke"
to authenticated
using (true);

create policy "Löschenzugriff für Getränke"
on "public"."getränke"
to public
using ((user_id = auth.uid())
);

create policy "Updatezugriff für Getränke"
on "public"."getränke"
to public
using (
  (user_id = auth.uid())
) with check (
  (user_id = auth.uid())
);